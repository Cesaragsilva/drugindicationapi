    "version": "0.2.0",
    "configurations": [
        {
            "name": "Development",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/DrugIndication.API/bin/Debug/net8.0/DrugIndication.Api.dll",
            "launchSettingsFilePath": "${workspaceFolder}/src/DrugIndication.API/Properties/launchSettings.json",
            "args": [],
            "cwd": "${workspaceFolder}/src/DrugIndication.API",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        }
    ]
